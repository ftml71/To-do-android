        <item name="fontWeight">700</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="collapsed_text">
        <item name="fontFamily">@font/segoe_bold</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="column_text">
        <item name="fontFamily">@font/segoe_ui</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="subtitle_text">
